<p style="color: green"><%= notice %></p>

<h1><%= @mining_types.model_name.human(count: 2) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description) %></th>
      <th><%= @mining_types.human_attribute_name(:acronym) %></th>
      <th><%= t(:actions) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type, class:"btn btn-success" %></td>
        <td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type), class:"btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.back'), welcome_index_path, class:"btn btn-primary" %>
<%= link_to t('new.mining_type'), new_mining_type_path, class:"btn btn-primary" %>