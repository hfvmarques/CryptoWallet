<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class:"form-control", placeholder:"Ex.: Bitcoin" %>
  </div>

  <div class="form-group">
    <%= form.label :acronym, style: "display: block" %>
    <%= form.text_field :acronym, class:"form-control", placeholder:"Ex.: BTC" %>
  </div>

  <div class="form-group">
    <%= form.label :image_url, style: "display: block" %>
    <%= form.text_field :image_url, class:"form-control", placeholder:"Ex.: http://img.ur/bitcoin.png" %>
  </div>  

  <div class="form-group">
    <%= form.label :mining_type, style: "display:block" %>
    <%= form.select("mining_type_id", @mining_type_options, { include_blank: 'Selecione...' }, class:"form-control") %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit nil, class:"btn btn-primary" %>
  </div>
<% end %>
