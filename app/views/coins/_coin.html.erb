<div id="<%= dom_id coin %>">
  <p>
    <strong>Description:</strong>
    <%= coin.description %>
  </p>

  <p>
    <strong>Acronym:</strong>
    <%= coin.acronym %>
  </p>

  <p>
    <strong>Image Url:</strong>
    <%= image_tag coin.image_url, size: "25x25" %>
  </p>

  <p>
    <strong>Mining Type:</strong>
    <%= coin.mining_type.description %>
  </p>

</div>
