<p style="color: green"><%= notice %></p>

<h1><%= @coins.model_name.human(count: 2) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:image_url) %></th>
      <th><%= t(:actions) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag coin.image_url, size: "35x35" %> </td>
        <td><%= link_to t('links.show'), coin, class:"btn btn-success" %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin), class:"btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.back'), welcome_index_path, class:"btn btn-primary" %>
<%= link_to t('links.new'), new_coin_path, class:"btn btn-primary" %>